{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Deadball Desktop",
  "version": "0.1.0",
  "identifier": "com.deadball.desktop",
  "build": {
    "beforeDevCommand": "npm --prefix ../frontend run dev -- --host 127.0.0.1 --port 5173",
    "beforeBuildCommand": "npm --prefix ../frontend run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../frontend/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": ["icons/icon.icns", "icons/icon.png", "icons/icon.ico"],
    "resources": ["resources/backend-template.tar.gz"]
  },
  "app": {
    "windows": [
      {
        "title": "Deadball",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  }
}
